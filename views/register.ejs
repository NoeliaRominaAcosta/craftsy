<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head',{
        title : 'Registro'
    })  %> 


<body class="register">
    <%- include('./partials/header') %> 

    <main>
        <section>
            <h1>Registrate</h1>
            <hr>
            <form method="post" action="">
                <article>
                <div class="register__form-box">
                    <label for="nombre">Nombre</label>
                    <input class="register__form-input" type="text" id="nombre" name="name" placeholder="Escribí tu nombre" value="<%= locals.old && old.name ? old.name : null %>">
                     <span class="register__text-error"><%= locals.errors && errors.name ? errors.name.msg : null %></span>
                </div>
                <div class="register__form-box">
                    <label for="email">Email</label>
                    <input class="register__form-input" type="email" id="email" name="email" placeholder="Escribí tu email" value="<%= locals.old && old.email ? old.email : null %>">
                    <span class="register__text-error"><%= locals.errors && errors.email ? errors.email.msg : null %></span>
                </div>
                <div class="register__form-box">
                    <label for="password">Contraseña</label>
                    <input class="register__form-input" type="password" id="password" name="password" placeholder="Escribí tu contraseña">
                    <span class="register__text-error"><%= locals.errors && errors.password ? errors.password.msg : null %></span>
                </div>
                <div class="register__form-box">
                    <label for="password">Repetir contraseña</label>
                    <input class="register__form-input" type="password" id="password" name="password2" placeholder="Escribí tu contraseña">
                    <span class="register__text-error"><%= locals.errors && errors.password2 ? errors.password2.msg : null %></span>
                </div>
               
            </article>
                
                <div class="register__form-box register__center">
                    <input class="" type="checkbox" name="checkbox" id="checkbox">
                <label for="terminos">Términos y condiciones</label>
                <span class="register__text-error"><%= locals.errors && errors.checkbox ? errors.checkbox.msg : null %></span>

                </div>
                <div class="register__form-box register__center">

                <button type="submit">Registrarme</button>
                <a href="/">
                    <button type="button">Cancelar</button>
                </a>
                </div>
            </form>
        </section>

    </main>

</body>

</html>